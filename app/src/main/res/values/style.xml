<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="NavigationMenuItem" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/nav_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="NavigationMenuIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/nav_icon_color</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>
    <!-- Custom Theme for Material DatePicker -->
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Background color for the calendar dialog -->
        <item name="materialCalendarStyle">@style/CustomMaterialCalendarStyle</item>
    </style>

    <!-- Custom Style for MaterialCalendar -->
    <style name="CustomMaterialCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:background">@color/white</item>
    </style>
        <!-- Circular shape for images -->
        <style name="ShapeAppearanceOverlay.Material3.Circle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">50%</item>
        </style>

        <!-- Small shape for FAB -->
        <style name="ShapeAppearanceOverlay.Material3.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">8dp</item>
        </style>

    <style name="DialogBg">
        <item name="android:background">@color/trans</item>
    </style>

    <style name="TopSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/style_top_sheet_dialog</item>
    </style>
    <style name="TopSheetDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="CustomMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="TabItemStyle">
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="RightSlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/flip_in</item>
        <item name="android:windowExitAnimation">@anim/flip_out</item>
    </style>
    <style name="RightSlideDialog">
        <item name="android:windowEnterAnimation">@anim/flip_in</item>
        <item name="android:windowExitAnimation">@anim/flip_out</item>
    </style>



</resources>