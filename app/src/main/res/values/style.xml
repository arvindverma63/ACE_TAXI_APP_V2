<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="NavigationMenuItem" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/nav_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="NavigationMenuIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/nav_icon_color</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="CardBGAvail">
        <item name="android:backgroundTint">@color/trans</item>
    </style>
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <!-- Custom Style for MaterialCalendar -->
    <style name="CustomMaterialCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:background">@color/white</item>
    </style>
        <!-- Circular shape for images -->
        <style name="ShapeAppearanceOverlay.Material3.Circle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">50%</item>
        </style>

        <!-- Small shape for FAB -->
        <style name="ShapeAppearanceOverlay.Material3.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">8dp</item>
        </style>

    <style name="DialogBg">
        <item name="android:background">@color/trans</item>
    </style>

    <style name="TopSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/style_top_sheet_dialog</item>
    </style>
    <style name="TopSheetDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="CustomMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>
    <style name="DrawerNavigation">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="itemTextAppearance">@style/NavMenuTextStyle</item>
    </style>
    <style name="NavMenuTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font_urban</item>
    </style>

    <style name="TabItemStyle">
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="RightSlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/flip_in</item>
        <item name="android:windowExitAnimation">@anim/flip_out</item>
    </style>
    <style name="RightSlideDialog">
        <item name="android:windowEnterAnimation">@anim/flip_in</item>
        <item name="android:windowExitAnimation">@anim/flip_out</item>
    </style>
    <style name="BottomSheetDialogTransparent" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@color/trans</item>
        <item name="android:backgroundTint">@color/trans</item>
        <item name="backgroundColor">@color/trans</item>
    </style>
    <style name="MaterialAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="materialCalendarStyle">@style/CustomMaterialCalendar</item>
        <item name="android:background">@color/white</item> <!-- Optional: for dialog background -->
    </style>

    <style name="CustomMaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceBright">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
    </style>

</resources>