<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Green background -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#4CAF50" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Gray background when not selected -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#B0B0B0" />
        </shape>
    </item>
</selector>
