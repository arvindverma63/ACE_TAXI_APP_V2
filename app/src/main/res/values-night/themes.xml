<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ACE_TAXI_V2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:fontFamily">@font/font_roborto</item>
    </style>
    <style name="Theme.ACE_TAXI_V2" parent="Base.Theme.ACE_TAXI_V2"/>
    <style name="MainBG">
        <item name="android:background">@color/primaryDark</item>
    </style>
    <style name="CardBG">
        <item name="android:backgroundTint">@color/darkCard</item>
    </style>
    <style name="InputBg">
        <item name="boxBackgroundColor">@color/InputBg</item>
    </style>
    <style name="CardBGMenu">
        <item name="android:backgroundTint">@color/darkCard</item>
    </style>
    <style name="NotificaionCard">
        <item name="android:backgroundTint">@color/darkCard</item>
    </style>
    <style name="TextBG">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="ActionBar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>
    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="background">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>
    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:backgroundTint">@color/primaryDark</item>
        <item name="tabBackground">@drawable/tab_background_night</item>
    </style>

    <style name="TableTheme">
        <item name="android:background">@color/darkCard</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IconTint">
        <item name="tint">@color/white</item>
    </style>

    <style name="Appbar" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/primaryDark</item>
    </style>
    <style name="SettingText">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="bottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextColor">@color/gray</item>
        <item name="itemIconTint">@color/gray</item>
        <item name="background">@color/primaryDark</item>
    </style>
    <style name="DrawerNavigation">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="itemTextAppearance">@style/NavMenuTextStyle</item>
    </style>
    <style name="NavMenuTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font_urban</item>
    </style>
    <style name="TablLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="backgroundTint">@color/primaryDark</item>
    </style>
    <style name="ButtonAvail" parent="Widget.Material3.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/darkCard</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">15dp</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="profileField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/darkCard</item>
    </style>
    <style name="ExpenseField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/darkCard</item>
    </style>
    <style name="dropdown" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:background">@color/darkCard</item>
        <item name="android:popupBackground">@color/darkCard</item>
        <item name="android:textColor">@color/white</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Override main colors -->
        <item name="colorOnPrimary">@color/darkCard</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurface">@color/darkCard</item>
        <item name="colorSurfaceBright">@color/darkCard</item>
        <item name="backgroundColor">@color/darkCard</item>

    </style>

    <style name="MainCardBG">
        <item name="android:background">@color/darkCard</item>
    </style>
</resources>