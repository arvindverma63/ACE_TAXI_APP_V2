<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:padding="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/light_gray"
    style="@style/CardBG">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            style="@style/CardBG"
            android:padding="12dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="1000dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/red">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_ace_car"
                        app:tint="@color/white"
                        android:layout_gravity="center"/>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Location"
                        android:id="@+id/pickup_location"
                        style="@style/TextBG"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="datetime"
                        android:id="@+id/pickup_datetime"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="price"
                        style="@style/TextBG"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/distance_duration"
                        android:text="120 mins"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            style="@style/CardBG"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <!-- Pickup Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/startIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_pickup"
                        android:layout_marginEnd="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mainAddressTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bobst Library"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/pickupAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70 Washington Square S, New York, NY 10012, USA"
                            android:textSize="12sp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pickup_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00: 00 AM"
                        android:textStyle="bold"
                        style="@style/TextBG"/>
                </LinearLayout>

                <!-- Dashed Line Divider -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_line"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="4dp"/>

                <!-- Drop-off Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/destinationIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_destination"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/red" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/subAddressTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Larchmont Hotel"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/destinationAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27 W Main St, Larchmont, NY 10538, USA"
                            android:textSize="12sp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/destination_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00: 00 AM"/>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Buttons Section (Replacing Time & Date) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Details"
                android:textAllCaps="true"
                app:backgroundTint="@color/white"
                android:padding="15dp"
                android:textColor="@color/gray"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray"
                app:cornerRadius="1000dp"
                app:elevation="3dp"
                android:layout_marginEnd="6dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:padding="15dp"
                android:textAllCaps="true"
                app:backgroundTint="@color/red"
                android:textColor="@color/white"
                app:cornerRadius="2000dp"
                app:elevation="3dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
