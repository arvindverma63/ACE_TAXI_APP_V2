<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MainBG"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:layout_margin="16dp"
        style="@style/MainBG">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_ace_car"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            style="@style/TextBG"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/sideMenu"
            android:layout_gravity="end"
            style="@style/IconTint"
            android:src="@drawable/ic_bar" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            style="@style/MainBG">



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:id="@+id/activeJobStatus"
                android:layout_marginTop="10dp"
                app:strokeWidth="0dp"
                app:strokeColor="@android:color/darker_gray"
                style="@style/CardBG">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/CardBG"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:strokeWidth="0dp"
                android:id="@+id/user_profile"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/green"
                        app:cardCornerRadius="1000dp"
                        android:layout_gravity="center"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_profile"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---- -----"
                        android:layout_gravity="center"
                        android:id="@+id/driver_name"
                        style="@style/TextBG"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        style="@style/IconTint"
                        android:src="@drawable/ic_arrow_forward"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


   <com.google.android.material.card.MaterialCardView
                style="@style/CardBG"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:strokeWidth="0dp"
                android:id="@+id/add_expenses"
                android:layout_marginTop="10dp"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/red"
                        app:cardCornerRadius="1000dp"
                        android:layout_gravity="center"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_ace_car"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Expense"
                        android:layout_gravity="center"
                        style="@style/TextBG"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="40dp"
                        style="@style/IconTint"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Active Booking"
                style="@style/TextBG"
                android:id="@+id/set_job_status"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/current_job_card"
                style="@style/CardBG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/green"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/purple"
                            android:id="@+id/scope_card"
                            android:layout_gravity="center"
                            app:cardCornerRadius="1000dp"
                            app:strokeWidth="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:text=""
                                android:layout_marginHorizontal="20dp"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:id="@+id/scope_text"
                                android:textColor="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/payment_card"
                            android:backgroundTint="@color/green"
                            android:layout_gravity="center"
                            app:cardCornerRadius="1000dp"
                            android:layout_marginLeft="10dp"
                            app:strokeWidth="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:text=""
                                android:layout_marginHorizontal="20dp"
                                android:textAllCaps="true"
                                android:textSize="14dp"
                                android:gravity="center"
                                android:id="@+id/payment_status"
                                android:textColor="@color/white" />
                        </com.google.android.material.card.MaterialCardView>
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/material_motion_duration_long_1"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/job_action"
                            style="@style/IconTint"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bar"/>

                    </LinearLayout>



                    <!-- Pickup Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Pickup Location"
                            android:src="@drawable/ic_pickup" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/pickup_address"
                                    style="@style/TextBG"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="No Current Active Jobs"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                            </LinearLayout>



                            <TextView
                                android:id="@+id/pickup_subaddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="askjf kdf s kdfjs sldkf"
                                style="@style/LightTextBg"
                                android:textSize="14dp" />
                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/pickup_time"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="16:20" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_line"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="4dp"/>
                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="12dp"
                            android:layout_marginLeft="10dp"
                            android:alpha="0.2"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>

                    <!-- Replace or add after the original vias layout -->
                    <LinearLayout
                        android:id="@+id/vias_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/destination_subaddress" />

                    <!-- Original vias layout (optional, can be removed if not needed) -->
                    <LinearLayout
                        android:id="@+id/vias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <!-- Existing content, kept hidden -->
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/blue"
                            android:contentDescription="Destination Location"
                            android:src="@drawable/ic_destination" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vias_address"
                                style="@style/TextBG"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/vias_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal" />
                    </LinearLayout>
<!--                    <View-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="1dp"-->
<!--                        android:layout_marginBottom="7dp"-->
<!--                        android:layout_marginTop="0dp"-->
<!--                        android:alpha="0.2"-->
<!--                        android:background="@android:color/darker_gray" />-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Destination Location"
                            android:src="@drawable/ic_destination" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/destination_address"
                                style="@style/TextBG"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Arjk d  fjd kasfkj"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/destination_subaddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="jkfksd  fkjsdf jf"
                                style="@style/LightTextBg"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
<!--                            <TextView-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:gravity="end"-->
<!--                                style="@style/TextBG"-->
<!--                                android:layout_marginRight="10dp"-->
<!--                                android:textStyle="bold"-->
<!--                                android:text="Arrived By" />-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_gravity="end"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"
                                android:id="@+id/destination_time"
                                android:text="16:20" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="7dp"
                        android:alpha="0.2"
                        android:background="@android:color/darker_gray" />



                    <!-- Footer Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Peter Farrel"
                                android:id="@+id/passenger_name"
                                style="@style/TextBG"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="@color/red"/>
                            <TextView
                                android:id="@+id/current_date"
                                style="@style/TextBG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90/u78/32"
                                android:textSize="14dp" />
                        </LinearLayout>
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/material_motion_duration_long_1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:id="@+id/current_price"
                                style="@style/TextBG"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="@color/green"/>
                            <TextView
                                android:id="@+id/passengers"
                                style="@style/TextBG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20 passengers"
                                android:textSize="14dp" />
                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:id="@+id/view_btn"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:padding="15dp"
                android:text="VIEW BOOKING"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#00000000">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/online_status_card"
                    style="@style/CardBG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="8dp"
                    app:strokeColor="@color/light_gray"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="UseSwitchCompatOrMaterialXml">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/location_card"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="15dp"
                            android:backgroundTint="@color/green"
                            android:padding="10dp"
                            app:cardCornerRadius="1000dp"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:rotation="45"
                                android:src="@drawable/ic_nav"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/online_status_label"
                                style="@style/TextBG"
                                android:layout_width="143dp"
                                android:layout_height="wrap_content"
                                android:text="Send Location OFF"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/online_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:minHeight="48dp"
                            app:thumbTint="@color/gray"
                            app:trackTint="@color/light_gray" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:strokeWidth="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    style="@style/CardBG">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/notification_btn"
                            android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Notifications"
                               style="@style/TextBG"
                               android:textSize="17dp"
                               android:textStyle="bold"
                               android:drawableStart="@drawable/ic_notification_settings"
                               android:drawablePadding="10dp"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/IconTint"
                                android:src="@drawable/ic_arrow_forward"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/report_btn"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reports"
                                android:textSize="17dp"
                                android:textStyle="bold"
                                android:drawableStart="@drawable/ic_calender"
                                android:drawablePadding="10dp"
                                style="@style/TextBG"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/IconTint"
                                android:src="@drawable/ic_arrow_forward"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/logout_btn"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                style="@style/TextBG"
                                android:textSize="17dp"
                                android:textStyle="bold"
                                android:drawableTint="@color/red"
                                android:drawableStart="@drawable/ic_logout"
                                android:drawablePadding="10dp"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                style="@style/IconTint"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_forward"/>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>