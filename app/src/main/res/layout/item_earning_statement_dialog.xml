<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_margin="16dp"
    style="@style/CardBG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="16dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2025-03-24 11:59"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp"/>

        <!-- User ID -->
        <TextView
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User ID: 0"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="16dp"/>

        <!-- Totals Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Totals"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/cashTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cash: £2.00"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/accTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Account: £0.00"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/rankTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rank: £0.00"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/commsTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comm: £0.40"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/grossTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gross: £2.00"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/netTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Net: £1.60"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary"/>
        </LinearLayout>

        <!-- Jobs Count Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Counts"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/cashJobsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cash Jobs: 1"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/accJobsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acc Jobs: 0"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/rankJobsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rank Jobs: 0"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <!-- Miles Count Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miles"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/cashMilesCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cash: 0.1 mi"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/accMilesCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acc: 0 mi"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/rankMilesCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rank: 0 mi"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Close"
            android:id="@+id/close_btn"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>