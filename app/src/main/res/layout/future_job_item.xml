<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    style="@style/CardBG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Icon and Time Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/clockIcon"
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_status"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/blue" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:56"
                    android:maxLength="11"
                    style="@style/TextBG"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Customer Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/person"
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginEnd="8dp"
                    app:tint="#FF5722" />

                <TextView
                    android:id="@+id/customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    style="@style/TextBG"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Address Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/mainAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BASE, SAXON HOUSE"
                style="@style/TextBG"
                android:textStyle="bold"
                android:maxLength="20"
                android:drawableStart="@drawable/ic_pickup_resized"
                android:textSize="10sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/subAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lea Village"
                style="@style/TextBG"
                android:maxLength="20"
                android:drawableLeft="@drawable/ic_destination_resized"
                android:textStyle="bold"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW"
                android:textAllCaps="true"
                app:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REJECT"
                android:textAllCaps="true"
                app:backgroundTint="@color/red"
                android:textColor="@color/white"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
