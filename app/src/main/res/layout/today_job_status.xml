<?xml version="1.0" encoding="utf-8"?>
<!-- Message Box -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        style="@style/MainBG"
        android:elevation="8dp">

        <!-- Message Box -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp"
            style="@style/CardBG">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" .. You Can Change Your Job Status from Here"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                style="@style/TextBG" />
        </com.google.android.material.card.MaterialCardView>



        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_on_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_pickup"
                    app:cornerRadius="0dp"
                    app:iconGravity="end|start"
                    app:backgroundTint="@color/primaryColor"
                    app:iconTint="@color/white"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On Route"
                    android:textSize="12sp"
                    style="@style/TextBG"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pick_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_keep_alive"
                    app:cornerRadius="0dp"
                    android:backgroundTint="@color/green"
                    app:iconGravity="end|start"
                    app:iconTint="@color/white"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="At Pickup"
                    android:textSize="12sp"
                    style="@style/TextBG"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_taxi"
                    app:iconGravity="end|start"
                    app:cornerRadius="0dp"
                    app:backgroundTint="@color/blue"
                    app:iconTint="@color/white"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POB"
                    android:textSize="12sp"
                    style="@style/TextBG"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_stc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    app:backgroundTint="@color/orange"
                    app:icon="@drawable/ic_finish_break"
                    app:iconGravity="end|start"
                    app:cornerRadius="0dp"
                    app:iconTint="@color/white"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STC"
                    android:textSize="12sp"
                    style="@style/TextBG"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_status"
                    app:iconGravity="end|start"
                    android:backgroundTint="@color/black"
                    app:cornerRadius="0dp"
                    app:iconTint="@color/white"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:textSize="12sp"
                    style="@style/TextBG"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_profile"
                    app:iconGravity="end|start"
                    android:backgroundTint="@color/gray"
                    app:cornerRadius="0dp"
                    app:iconTint="@color/white"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Job"
                    android:textSize="12sp"
                    style="@style/TextBG"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>