<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    style="@style/MainBG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        style="@style/MainBG">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_ace_car"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability"
            style="@style/TextBG"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/sideMenu"
            android:layout_gravity="end"
            android:visibility="gone"
            style="@style/IconTint"
            android:src="@drawable/ic_bar" />
    </LinearLayout>
    <!-- Date Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Range"
            style="@style/TextBG"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Date Container with CardView -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                style="@style/CardBG"
                android:layout_gravity="center"
                app:cardBackgroundColor="#F5F5F5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:id="@+id/week_prev"
                    style="@style/IconTint"
                    android:src="@drawable/ic_back_arrow"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/date_button"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/dateText"
                        android:text="Dec 22, 2024"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calender"
                        android:visibility="gone"
                        app:tint="?attr/colorControlNormal" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="8dp"
                    android:padding="10dp"
                    style="@style/IconTint"
                    android:id="@+id/week_next"
                    android:rotationY="180"
                    android:src="@drawable/ic_back_arrow" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="0dp">
        </LinearLayout>

    </HorizontalScrollView>
    <!-- Options Grid with CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="@style/MainBG"
        android:orientation="vertical">

        <!-- First Row: Unavailable and AM Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Unavailable Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:strokeWidth="0dp"
                style="@style/CardBGAvail">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/unavailable_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unavailable All Day"
                    android:textSize="14sp"
                    app:strokeColor="@color/red"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    app:iconTint="@color/white"
                    android:gravity="center"
                    style="@style/ButtonAvail"
                    app:cornerRadius="4dp"
                    app:strokeWidth="0dp"
                    app:icon="@drawable/ic_unavail"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />

            </com.google.android.material.card.MaterialCardView>

            <!-- AM Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:id="@+id/am_school_button"
                        android:text="AM School Only"
                        style="@style/ButtonAvail"
                        app:strokeColor="@color/green"
                        android:backgroundTint="@color/green"
                        android:textColor="@color/white"
                        app:iconTint="@color/white"
                        android:layout_marginRight="5dp"
                        app:cornerRadius="4dp"
                        app:icon="@drawable/ic_am"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:gravity="center"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:id="@+id/pm_school_button"
                        android:layout_marginLeft="5dp"
                        android:text="PM School Only"
                        style="@style/ButtonAvail"
                        app:strokeColor="@color/green"
                        app:cornerRadius="4dp"
                        android:backgroundTint="@color/green"
                        android:textColor="@color/white"
                        app:iconTint="@color/white"
                        app:icon="@drawable/ic_pm"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Second Row: PM and AM-PM Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <!-- AM-PM Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="00dp"
                app:strokeWidth="0dp"
                style="@style/CardBGAvail">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/am_pm_school_button"
                    style="@style/ButtonAvail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:strokeColor="@color/green"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    app:iconTint="@color/white"
                    android:text="AM-PM School Only"
                    app:icon="@drawable/ic_am"
                    app:cornerRadius="4dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Third Row: Custom and View Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Custom Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:strokeWidth="0dp"
                style="@style/CardBGAvail">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Set Manually"
                    android:id="@+id/custom_button"
                    app:strokeColor="@color/red"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    app:iconTint="@color/white"
                    style="@style/ButtonAvail"
                    app:icon="@drawable/ic_custom"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:cornerRadius="4dp"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- View Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="0dp"
                app:cardCornerRadius="0dp"
                style="@style/CardBGAvail">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    style="@style/ButtonAvail"
                    app:icon="@drawable/ic_view"
                    app:iconGravity="textStart"
                    app:cornerRadius="4dp"
                    android:visibility="gone"
                    app:iconPadding="8dp"
                    android:id="@+id/view_all"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Availablities"
                android:layout_marginVertical="15dp"
                style="@style/TextBG"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(dd-mm-yyy)"
                android:layout_gravity="center"
                style="@style/TextBG"
                android:id="@+id/selectDate"
                android:layout_marginRight="30dp"
                android:padding="10dp"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            style="@style/CardBGAvail">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    style="@style/TextBG"
                    android:layout_marginRight="50dp"
                    android:padding="10dp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    style="@style/TextBG"
                    android:layout_marginRight="40dp"
                    android:padding="10dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextBG"
                    android:padding="10dp"
                    android:text="Details" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclar_view"/>
    </LinearLayout>

</LinearLayout>