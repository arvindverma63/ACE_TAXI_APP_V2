<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    style="@style/MainBG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        style="@style/MainBG">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_ace_car"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability"
            style="@style/TextBG"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/sideMenu"
            android:layout_gravity="end"
            style="@style/IconTint"
            android:src="@drawable/ic_bar" />
    </LinearLayout>
    <!-- Date Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Date Container with CardView -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:id="@+id/date_button"
            style="@style/CardBG"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/dateText"
                    android:text="Dec 22, 2024"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calender"
                    app:tint="?attr/colorControlNormal" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Options Grid with CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/MainBG"
        android:orientation="vertical">

        <!-- First Row: Unavailable and AM Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Unavailable Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:strokeWidth="0dp"
                style="@style/CardBGAvail">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/unavailable_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unavailable All Day"
                    android:textSize="14sp"
                    android:gravity="center"
                    style="@style/ButtonAvail"
                    app:icon="@drawable/ic_unavail"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />

            </com.google.android.material.card.MaterialCardView>

            <!-- AM Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    style="@style/CardBGAvail"
                    app:strokeWidth="0dp">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_school_button"
                        android:text="AM School Only"
                        style="@style/ButtonAvail"
                        app:icon="@drawable/ic_am"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:gravity="center"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- PM Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    app:strokeWidth="0dp"
                    style="@style/CardBGAvail"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pm_school_button"
                        android:text="PM School Only"
                        style="@style/ButtonAvail"
                        app:icon="@drawable/ic_pm"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>

        <!-- Second Row: PM and AM-PM Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <!-- AM-PM Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:strokeWidth="0dp"
                style="@style/CardBGAvail">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/am_pm_school_button"
                    android:text="AM-PM School Only"
                    app:icon="@drawable/ic_am"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    style="@style/ButtonAvail"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Third Row: Custom and View Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Custom Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:strokeWidth="0dp"
                style="@style/CardBGAvail">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Set Manually"
                    android:id="@+id/custom_button"
                    style="@style/ButtonAvail"
                    app:icon="@drawable/ic_custom"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- View Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="0dp"
                app:cardCornerRadius="20dp"
                style="@style/CardBGAvail">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    style="@style/ButtonAvail"
                    app:icon="@drawable/ic_view"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:id="@+id/view_all"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/material_motion_duration_long_1"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:backgroundTint="#E6EFFF"
        android:paddingVertical="12dp"
        android:fontFamily="@font/font_urban"
        app:strokeColor="@color/trans"
        app:strokeWidth="1dp"
        android:textColor="@color/dark_blue"
        app:cornerRadius="1000dp"
        android:letterSpacing="0.02"/>
</LinearLayout>