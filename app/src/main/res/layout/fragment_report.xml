<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="WebViewLayout">

        <!-- Header Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="16dp"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Circular Progress Indicator -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:progress="75"
                    app:indicatorColor="#6200EE"
                    app:indicatorSize="8dp" />

                <!-- Job Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Jobs"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Worked 0 hours"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Google Pie Chart in WebView -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white">

            <WebView
                android:id="@+id/google_pie_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#FFFFFF" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Table Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/white">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:divider="@drawable/table_devider"
                android:showDividers="middle">

                <!-- Header Row -->
                <TableRow
                    android:background="#EEEEEE"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAY"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JOBS"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CASH"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ePAYMENT"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="#000" />
                </TableRow>

                <!-- Data Row 1 -->
                <TableRow
                    android:background="#FFFFFF"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27 Sep"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£0.00"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£0.00"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£0.00"
                        android:padding="8dp"
                        android:textColor="#000" />
                </TableRow>

                <!-- Data Row 2 -->
                <TableRow
                    android:background="#F9F9F9"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28 Sep"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£0.03"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£10.50"
                        android:padding="8dp"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£0.00"
                        android:padding="8dp"
                        android:textColor="#000" />
                </TableRow>

                <!-- Total Row -->
                <TableRow
                    android:background="#EEEEEE"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£0.03"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£10.50"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textColor="#000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£0.00"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textColor="#000" />
                </TableRow>
            </TableLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
