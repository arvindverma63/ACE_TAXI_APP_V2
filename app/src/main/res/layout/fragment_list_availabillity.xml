<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    style="@style/MainBG">

    <!-- Header with Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/btnBack"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="350dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Availability"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Date Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Date Container with Material CardView -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"
            app:cardCornerRadius="12dp"
            style="@style/CardBG">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dec 22, 2024"
                    android:id="@+id/datetime_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    style="@style/IconTint"
                    android:src="@drawable/ic_calender" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Toggle for Me and All -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclar_view"
            android:layout_width="match_parent"
            android:layout_height="393dp"
            android:clipToPadding="false"
            android:padding="8dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        app:backgroundTint="#E6EFFF"
        android:paddingVertical="12dp"
        android:fontFamily="@font/font_urban"
        app:strokeColor="@color/trans"
        app:strokeWidth="1dp"
        android:textColor="@color/dark_blue"
        app:cornerRadius="1000dp"
        android:letterSpacing="0.02"/>

</LinearLayout>