<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/MainBG"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:id="@+id/close_btn"
                style="@style/IconTint"
                android:contentDescription="Back" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Booking Details"
                style="@style/TextBG"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/font_urban" />

            <ImageView
                android:layout_width="24dp"
                android:id="@+id/change_status"
                android:layout_height="19dp"
                android:contentDescription="Menu"
                android:src="@drawable/ic_bar" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#12345"
            android:id="@+id/bookingId"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/red"/>
        <!-- Address Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/current_job_card"
            style="@style/CardBG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Pickup Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Pickup Location"
                        android:src="@drawable/ic_pickup" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pickup_address"
                            style="@style/TextBG"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="No Current Active Jobs"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pickup_subaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/asap_card"
                        android:backgroundTint="@color/green"
                        android:layout_marginRight="4dp"
                        android:visibility="gone"
                        android:layout_gravity="top"
                        app:cardCornerRadius="1000dp"
                        android:layout_marginLeft="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:text="ASAP"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textColor="@color/white" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:id="@+id/pickup_time"
                        style="@style/TextBG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_line"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="4dp"/>
                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:layout_marginLeft="10dp"
                        android:alpha="0.2"
                        android:background="@android:color/darker_gray" />
                </LinearLayout>

                <!-- Replace or add after the original vias layout -->
                <LinearLayout
                    android:id="@+id/vias_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/destination_subaddress" />

                <!-- Original vias layout (optional, can be removed if not needed) -->
                <LinearLayout
                    android:id="@+id/vias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <!-- Existing content, kept hidden -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/blue"
                        android:contentDescription="Destination Location"
                        android:src="@drawable/ic_destination" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vias_address"
                            style="@style/TextBG"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vias_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal" />
                </LinearLayout>
                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="0dp"
                    android:visibility="gone"
                    android:alpha="0.2"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Destination Location"
                        android:src="@drawable/ic_destination" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/destination_address"
                            style="@style/TextBG"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/destination_subaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/destination_time"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Footer Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pickup_date"
                        style="@style/TextBG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp" />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/material_motion_duration_long_1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:id="@+id/distance"/>
                        <TextView
                        android:id="@+id/distance_duration"
                        style="@style/TextBG"
                            android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Passenger Info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeWidth="0dp"
            app:cardCornerRadius="8dp"
            style="@style/CardBG"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/red"
                        app:cardCornerRadius="20dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_profile"
                            android:contentDescription="Passenger"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/passenger_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBG"
                            android:layout_marginStart="12dp"
                            android:text="Theo Holland"
                            android:textSize="16sp"
                            android:fontFamily="@font/font_urban" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/passenger_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Passengers"
                            android:textColor="@color/gray"
                            android:layout_marginStart="12dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_urban" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Chat and Call Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Arrived"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_marginEnd="8dp"
                        app:icon="@drawable/ic_message"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@color/blue"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/blue"
                        app:cornerRadius="8000dp"
                        app:backgroundTint="@color/light_gray" />


                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Call"
                        android:textSize="14sp"
                        android:textColor="@color/green"
                        android:layout_marginEnd="8dp"
                        app:icon="@drawable/ic_phone"
                        app:iconTint="@color/green"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/green"
                        app:cornerRadius="8000dp"
                        app:backgroundTint="@color/light_gray" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeWidth="0dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            style="@style/CardBG">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <!-- Payment Method -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:backgroundTint="@color/purple"
                        android:id="@+id/scope_card"
                        android:layout_gravity="center"
                        app:cardCornerRadius="1000dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:text="Card"
                            android:layout_marginHorizontal="20dp"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:id="@+id/scope_text"
                            android:textColor="@color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:id="@+id/payment_card"
                        android:backgroundTint="@color/green"
                        android:layout_gravity="center"
                        app:cardCornerRadius="1000dp"
                        android:layout_marginLeft="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="20dp"
                            android:text="Paid"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:id="@+id/payment_status"
                            android:textColor="@color/white" />
                    </com.google.android.material.card.MaterialCardView>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/material_motion_duration_long_1"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Fare Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeWidth="0dp"
            style="@style/CardBG"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_urban"
                        android:text="Booked By"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/bookerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_urban"
                        android:text="--- ---"
                        style="@style/TextBG"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:alpha="0.2"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Journey Price"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:fontFamily="@font/font_urban" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£20.00"
                        style="@style/TextBG"
                        android:textSize="14sp"
                        android:fontFamily="@font/font_urban" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Booking"
                android:textColor="@color/white"
                app:backgroundTint="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8000dp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/complete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete Booking"
                android:textColor="@color/white"
                app:backgroundTint="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8000dp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Active Booking"
                android:textColor="@color/gray"
                app:backgroundTint="@color/light_gray"
                app:strokeColor="@color/gray"
                app:strokeWidth="1dp"
                android:textSize="16sp"
                app:cornerRadius="800dp"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>