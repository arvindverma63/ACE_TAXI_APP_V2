<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_yellow"
    android:orientation="horizontal"
    android:padding="4dp"
    android:weightSum="1"
    android:gravity="center_vertical">

    <!-- Left Section: User ID -->
    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.25"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Middle Section: Name and Label -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.55"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alan Waistell"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Right Section: Availability Hours -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.20"
        android:gravity="right">

        <Button
            android:id="@+id/btn_available_hours_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:text="07:30 - 09:15 (AM SR)"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:minHeight="0dp"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/btn_available_hours_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:text="14:30 - 16:15 (PM SR)"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:minHeight="0dp"
            android:minWidth="0dp" />
    </LinearLayout>
</LinearLayout>